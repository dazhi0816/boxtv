<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">


    <xyz.doikki.videoplayer.player.VideoView
        android:id="@+id/mVideoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ProgressBar
        android:id="@+id/play_loading"
        android:layout_width="@dimen/vs_50"
        android:layout_height="@dimen/vs_50"
        android:layout_gravity="center"
        android:indeterminateBehavior="repeat"
        android:indeterminateDrawable="@drawable/anim_loading"
        android:indeterminateOnly="true" />

    <ImageView
        android:id="@+id/play_load_error"
        android:layout_width="@dimen/vs_50"
        android:layout_height="@dimen/vs_50"
        android:layout_gravity="center"
        android:alpha="0.75"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:src="@drawable/icon_error"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/play_load_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/vs_50"
        android:text="Now Loading"
        android:textColor="@color/color_CCFFFFFF"
        android:textSize="@dimen/ts_24" />

    <TextView
        android:id="@+id/playNetSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="5mm"
        android:layout_marginRight="5mm"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="16mm"
        android:visibility="gone" />
    <TextView
        android:id="@+id/px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:layout_marginTop="5mm"
        android:layout_marginLeft="5mm"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:text="1080px / 850px"
        android:textColor="@android:color/white"
        android:textSize="16mm"
        android:visibility="gone" />
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:layout_marginTop="5mm"
        android:layout_marginRight="5mm"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="16mm"
        android:visibility="gone" />
    <TextView
        android:id="@+id/playnow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_marginBottom="5mm"
        android:layout_marginLeft="5mm"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="16mm"
        android:visibility="gone" />
</FrameLayout>